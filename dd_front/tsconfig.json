{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    
    /* Allow JavaScript files */
    "allowJs": true,
    "checkJs": false,
    
    /* Module resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    /* JSX */
    "jsx": "react-jsx",
    
    /* Type checking - relaxed for JS project */
    "strict": false,
    "noEmit": true,
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@objects/*": ["./src/objects/*"],
      "@utils/*": ["./src/utils/*"],
      "@game/*": ["./src/game/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.js",
    "tests/**/*.jsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}